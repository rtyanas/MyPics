package com.yanas.mobileapp.mypic;

public class MessageData {
	
	private long id;
	private String message = "message";
	private String mSize = "size";
	private String mFont = "font";
	private String mBold = "bold";
	private String mItalic = "italic";

	private String pic = "pic";

	
	public MessageData() {
		id = 0;
		message = "";
		mSize = "";
		mFont = "";
		mBold = "";
		mItalic = "";
		pic = "";
	}
	  
	  
	public MessageData(	long id_in, String message_in, String mSize_in, String mFont_in, 
						String mBold_in, String mItalic_in, String pic_in) {
		id = id_in;
		init(	message_in, mSize_in, mFont_in, 
				mBold_in, mItalic_in, pic_in);
	}
	  
	  
	public MessageData(	String message_in, String mSize_in, String mFont_in, 
						String mBold_in, String mItalic_in, String pic_in) {
		id = 0;
		init(	message_in, mSize_in, mFont_in, 
				mBold_in, mItalic_in, pic_in);
	}
	  
	  
	public void init(	String message_in, String mSize_in, String mFont_in, 
						String mBold_in, String mItalic_in, String pic_in) {
		message = message_in;
		mSize = mSize_in;
		mFont = mFont_in;
		mBold = mBold_in;
		mItalic = mItalic_in;
		pic = pic_in;
	}
	  
	  
	public long getId() {
		return id;
	}


	public void setId(long id) {
		this.id = id;
	}


	public String getMessage() {
		return message;
	}

	public void setMessage(String message) {
		this.message = message;
	}

	public String getmSize() {
		return mSize;
	}

	public void setmSize(String mSize) {
		this.mSize = mSize;
	}

	public String getmFont() {
		return mFont;
	}

	public void setmFont(String mFont) {
		this.mFont = mFont;
	}

	public String getmBold() {
		return mBold;
	}

	public void setmBold(String mBold) {
		this.mBold = mBold;
	}

	public String getmItalic() {
		return mItalic;
	}

	public void setmItalic(String mItalic) {
		this.mItalic = mItalic;
	}

	public String getPic() {
		return pic;
	}

	public void setPic(String pic) {
		this.pic = pic;
	}

}
